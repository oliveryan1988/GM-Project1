<head>
  <meta charset="utf-8" />

  <!-- Set the viewport width to device width for mobile -->
  <meta name="viewport" content="width=device-width" />

  <title></title>
  <!-- Included CSS Files (Uncompressed) -->
  <!--
  <link rel="stylesheet" href="stylesheets/foundation.css">
  -->
  
  <!-- Included CSS Files (Compressed) -->
  <!--<link rel="stylesheet" href="~/stylesheets/foundation.css">
  <link rel="stylesheet" href="~/stylesheets/app.css">-->
  <script src="~/javascripts/modernizr.foundation.js"></script>
</head>
<body>

        @{
    string CurrentUrl = "";
    CurrentUrl = HttpContext.Current.Server.MapPath("~/"); 
    string img1=(string.IsNullOrEmpty(Model.IMG_1)? "":CurrentUrl+"/Images/StoryPics/"+Model.IMG_1);
    string img2 = (string.IsNullOrEmpty(Model.IMG_2) ? "" : CurrentUrl + "/Images/StoryPics/" + Model.IMG_2);
    string img3 = (string.IsNullOrEmpty(Model.IMG_3) ? "" : CurrentUrl + "/Images/StoryPics/" + Model.IMG_3);
    string imgProfile = (string.IsNullOrEmpty(Model.Profile.PHOTO_PATH) ? CurrentUrl + "/Images/person-cutout.png" : CurrentUrl + "/Images/ProfilePics/" + Model.Profile.PHOTO_PATH);
    }


  <div class="row">
      <font size="2">
      <table width="100%" border="0" style="font-family: LincolnProximaNova;">
          <tbody>
          <tr>
              <td width="20%">
                  <img src="@Url.Content(imgProfile)" alt="IMAGES" width="100%" />
              </td>
              <td width="25%" valign="top" align="left">
                  <strong >@Model.Profile.FIRST_NAME @Model.Profile.LAST_NAME<br>@Model.Profile.DLR_NAME</strong>
              </td>
              <td width="35%" valign="top" align="left">
                  <strong>
                      @Model.Profile.EMAIL_ID<br>
                      DEALERSHIP PHONE: @Model.Profile.phone1-@Model.Profile.phone2-@Model.Profile.phone3<br>
                      MOBILE PHONE: @Model.Profile.mobile1-@Model.Profile.mobile2-@Model.Profile.mobile3
                  </strong>
              </td>
              @{DateTime sbmDate=DateTime.Now;
                sbmDate = (DateTime)Model.CREATED_DATE ;}
              <td width="20%" valign="top" align="right"><strong>@sbmDate.ToString("MM/dd/yy")</strong></td>
          </tr>
            <tr>
                <td colspan="4"><br /></td>
            </tr>
            <tr>
                @if(!String.IsNullOrEmpty(img1))
                {
                <td colspan="4"><img src="@Url.Content(img1)" alt="IMAGES" width="708px"/></td>
                }
            </tr>
            <tr>
                @if(!String.IsNullOrEmpty(img2))
                {
                <td  colspan="2"><img src="@Url.Content(img2)" alt="IMAGES" width="340px"/></td>
                }
                @if(!String.IsNullOrEmpty(img3))
                {
                <td  colspan="2" align="center" style="padding-left: 12px;"><img src="@Url.Content(img3)" alt="IMAGES" width="340px"/></td>
                }
            </tr>
            <tr>
                <td colspan="4" style="font-family:LincolnProximaNova">
                    <br />
                    <h4><strong>@Html.DisplayFor(model => model.STORY_TITLE)</strong></h4>
                    <p>@Html.DisplayTextFor(m => Model.STORY_CONTENT)</p>
                </td>
            </tr>
          </tbody>
      </table>
      </font>
  </div>

