@using LincolnBrandChampion.Web.Helpers
@{
    ViewBag.Title = "MetricsRegistrationReport";
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.homeid = "metrics"; 
}

@*<link href="~/Content/DT_bootstrap.css" rel="stylesheet" />*@
<script type="text/javascript" language="javascript" src="@Url.Content("~/Scripts/jquery.dataTables.js")"></script>
<script type="text/javascript" src="~/javascripts/jquery.timepicker.js"></script>
<script type="text/javascript" charset="utf-8">

    function populateTable(dlrRegion, eventid) {

        if (dlrRegion === null) {
            $("#market").val('ALL');
        }
        if (eventid === null) {
            $("#event").val(0);
        }
        $("#tableScroll").load('@Url.Action("RegistrationReport", "Metrics")',
        {
            dlrRegion: dlrRegion,
            eventid: eventid
        }, function () {
        });
    }
    /* Table initialisation */
    $(document).ready(function () {
        //$('#regTable').html("<div style='text-align:center;padding:10px 10px 10px 10px;'>Loading... </div>");
        populateTable(null, null);
    });
</script>

<div class="row">
    <div class="twelve columns">
        <p class="home-intro">To generate refined <strong>Event Registration Master Reports</strong>, choose from the Market dropdown options below. Select the buttons at the bottom of the page to create a print-ready file, generate an Adobe Acrobat&reg; PDF or Microsoft&#8482; Excel file based on the report selections, or view the conent below for quick and easy reference.</p>
        <h2>EVENT REGISTRATION MASTER REPORT</h2>


        <div id="tableScroll">
            <table width="976" border="0" cellpadding="0" cellspacing="0" id="regTable"><tr><th><div style='text-align:center;padding:10px 10px 10px 10px;'>Loading... </div></th></tr></table>
        </div>



    </div>

</div>


