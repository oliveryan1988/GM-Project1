@model LincolnBrandChampion.Model.Models.HotelCarModel

<!-- Popup Menu -->

<div >
  <h2>EDIT BRAND CHAMPION REGISTRATION</h2>
  <div class="row">
    <div class="ten columns centered">
        
      <h3>@Html.DisplayTextFor(m => Model.FIRST_NAME) @Html.DisplayTextFor(m => Model.LAST_NAME)</h3>
      <p class="subtitle">@Html.DisplayTextFor(m => Model.DEALERSHIP_NAME)<br>P&amp;A Code: @Html.DisplayTextFor(m => Model.PA_CODE)</p>
       @using (Html.BeginForm("HotelInfo", "Metrics", FormMethod.Post, new { enctype = "multipart/form-data", @class = "profileform awesome" }))
       {
          @Html.HiddenFor(m => Model.EVENT_ID)
            @Html.HiddenFor(m => Model.STARS_ID)
      <h3>Hotel Details</h3>
    <div class="row">
      <div class="six columns">@Html.TextBoxFor(m => Model.HOTEL_CONF, new { @class = "", maxlength=20 })@Html.ValidationMessageFor(m => Model.HOTEL_CONF)<label>Hotel Confirmation Number</label></div>
      <div class="six columns">@Html.TextBoxFor(m => Model.HOTEL_NAME, new { @class = "" , maxlength=40})@Html.ValidationMessageFor(m => Model.HOTEL_NAME)<label>Hotel Name</label></div>
    </div>
      
    <div class="row">
      <div class="six columns"><span class="cal-button2"></span>@Html.TextBoxFor(m => Model.HOTEL_CHECK_IN,"{0:MM/dd/yyyy}", new { id="datepicker1", @class = ""})@Html.ValidationMessageFor(m => Model.HOTEL_CHECK_IN)<label>Hotel Check In Date</label></div>
      <div class="six columns"><span class="cal-button2"></span>@Html.TextBoxFor(m => Model.HOTEL_CHECK_OUT,"{0:MM/dd/yyyy}", new {id="datepicker2", @class = ""})@Html.ValidationMessageFor(m => Model.HOTEL_CHECK_OUT)<label>Hotel Check Out Date</label></div>
    </div>
                  <p class="text-center"><br><img src="~/Images/dash.png" alt=""/></p>
      <h3>Transportation Details</h3>
    <div class="row">
      <div class="six columns">@Html.TextBoxFor(m => Model.CAR_CONFIRM, new { @class = "" , maxlength=20})@Html.ValidationMessageFor(m => Model.CAR_CONFIRM)<label>Town Car Confirmation</label></div>
      <div class="six columns">@Html.TextAreaFor(m => Model.CAR_NOTES, new { @class = "" , maxlength=500})<label>Car Notes</label></div>
    </div>
                  <p class="text-center"><br><img src="~/Images/dash.png" alt=""/></p>
      <h3>Other Details</h3>
    <div class="row">
      <div class="twelve columns">@Html.TextAreaFor(m => Model.ADMIN_NOTES, new { @class = "" , maxlength=80})<label>Admin Notes</label></div>
    </div>
    <div class="row">
      <div class="twelve columns"><p class="text-right"><input type="submit" value="Save &#8250;" class="button admin-button" ></p></div>
    </div>
        
       }
    </div>
  </div><a class="close-reveal-modal">&#215;</a>
</div>

  <!-- Included JS Files (Compressed) -->
    @Scripts.Render("~/bundles/jqueryval")
  <script src="~/javascripts/foundation.min.js"></script>
	<script src="~/javascripts/jquery-ui.js"></script>
  
  <!-- Initialize JS Plugins -->
  <script src="~/javascripts/app.js"></script>

<script>
$(document).ready(function(){

wrapSelects = function() {
  $('form.awesome select:not(.is-wrapped)')
    .addClass('is-wrapped')
    .wrap('<div class="custom dropdown select" />')
    .after('<span class="selector"></span>');
}

$(wrapSelects);


  $(function() {
      $("#datepicker1").datepicker();
      $("#datepicker2").datepicker();
  });
	
});
    </script>

