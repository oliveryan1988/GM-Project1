</head>
<body id="@ViewBag.homeid">
    <div class="row">
        <div id="header" class="twelve columns">
            <h1><a href="~/LBC/Welcome" target="_parent">
                <img src="~/Images/lincoln-brand-champion.png" alt="" /></a></h1>
            <div class="login">
                HELLO, <span>@Session["User_Id"].ToString().ToUpper()</span><div class="log">
                    <a href="~/LBC/logout">Logout</a>
                    @if (Convert.ToInt32(Session["ROLE_ID"]) == 5 || Convert.ToInt32(Session["ROLE_ID"]) == 4 || Convert.ToInt32(Session["ROLE_ID"]) == 2)
                    {<a href="~/Metrics/Index"> | Metrics</a>}
                </div>
            </div>
        </div>
    </div>
    <div class="row">
        <div class="twelve columns">
            @if (ViewBag.Header == null)
            {
                @RenderPage("~/Views/Shared/_Header.cshtml")
            }
        </div>
    </div>
    @RenderBody()

    @*    @RenderPage("~/Views/Shared/_oldFooter.cshtml")*@

    @RenderPage("~/Views/Shared/_Footer.cshtml")
    <div id="divpartial" class="reveal-modal medium">
</div>
    <div id="copy-foot">
        <div class="row">
            <div class="twelve columns">
                <ul class="inline-list right">
                    <li><a href="#">Terms and Conditions</a></li>
                    <li>|</li>
                    <li><a href="~/Content/pdf/LN_Brand_Champ_Privacy.pdf" target="_blank">Privacy Policy</a></li>
                    <li>
                        <img src="~/Images/lincoln-symbol.png" alt="" /></li>
                </ul>
                <p>&copy; 2015 Ford Motor Company</p>
            </div>
        </div>
    </div>
